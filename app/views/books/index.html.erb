<p class="success" id="notice">
 <%=  notice %>
<h1>Books</h1>
<div class="box">
  <div class="title_area">
    <h4>Title</h4>
  </div>
  <div class="body_area">
    <h4>Body<h4>
  </div>
</div>


<% @books.each do |book| %>
<main>
<div class="title_text">
  <span><%= book.title %></span>
</div>
<div class="body_text">
  <span><%= book.body %></span>
</div>
  <span class="link_area">
    <!--routesのas: 'book'の記載をしたやつ。リンクになっている。-->
    <%= link_to "Show", book_path(book.id) %>
    <%= link_to "Edit", edit_book_path(book.id) %>
    <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  </span>
  </main>
<% end %>

<h2>New book</h2>

<%= form_with model: @book, url:'/books/index', local:true do |f| %>

 <!--エラーメッセージの表示-->
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!--ここまで-->

  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <div>
  <%= f.submit 'Create Book' %>
  </div>
<% end %>