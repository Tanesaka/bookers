<h1>Editing Book</h1>

 <!--エラーメッセージの表示-->
<% if @book.errors.any? %>
  <div class="alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!--ここまで-->

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Body</h4>
      <%= f.text_area :body %>
      <div>
      <%= f.submit 'Update Book' %>
      </div>
      <div>
        <%= link_to "Show", book_path(@book.id) %>
        <%= link_to "Back", index_book_path %>
      </div>
<% end %>